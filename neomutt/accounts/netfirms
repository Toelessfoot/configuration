# vim: filetype=muttrc
unmailboxes *

# in/out mail servers
set realname = ""
set imap_pass = ""
set smtp_url = "smtps://@smtp.netfirms.com:465"
set smtp_pass = ""
set folder = "imaps://@imap.netfirms.com:993"
set spoolfile = "+INBOX"

set from = ""
set envelope_from
set use_from = "yes"
set record = "+INBOX.Sent"
set trash = "+INBOX.Trash"
set postponed = "+INBOX.Drafts"
set mail_check = 6

# Allow Mutt to open a new IMAP connection automatically.
unset imap_passive

# Keep the IMAP connection alive by polling intermittently (time in seconds).
set imap_keepalive = 300

## Hook -- IMPORTANT!
account-hook $folder "set imap_pass="
